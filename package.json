{
  "name": "porchetta",
  "version": "0.3.0",
  "description": "Porchetta server",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "postinstall": "./node_modules/bower/bin/bower install",
    "start": "node lib/index.js",
    "testem": "./test/support/start && ./node_modules/testem/testem.js -f test/testem.json && ./test/support/stop",
    "test": "./node_modules/mocha/bin/mocha test/lib && ./test/support/start && ./node_modules/testem/testem.js -f test/testem.json ci && ./test/support/stop",
    "stat": "cloc lib client --quiet --by-file && cloc test/**/*.js --quiet --exclude-dir=support"
  },
  "dependencies": {
    "socket.io": "~0.9.16",
    "superagent": "~0.15.1"
  },
  "devDependencies": {
    "socket.io-client": "~0.9.16",
    "chai": "~1.6.1",
    "mocha": "~1.10.0",
    "underscore": "~1.4.4",
    "express": "~3.2.6",
    "testem": "~0.3.7",
    "bower": "~0.9.2"
  }
}
