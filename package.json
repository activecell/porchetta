{
  "name": "porchetta",
  "version": "0.2.0",
  "private": true,
  "main": "lib/index.js",
  "scripts": {
    "postinstall": "./node_modules/component/bin/component install",
    "start": "node lib/index.js",
    "test": "./node_modules/mocha/bin/mocha test/lib && ./node_modules/testem/testem.js -f test/testem.json ci",
    "build": "./node_modules/component/bin/component build",
    "release": "./node_modules/component/bin/component build --standalone Porchetta && mv build/build.js dist/porchetta.js",
    "stat": "cloc lib client --quiet --by-file && cloc test/**/*.js --quiet --exclude-dir=support"
  },
  "dependencies": {
    "socket.io": "~0.9.16",
    "request": "~2.21.0"
  },
  "devDependencies": {
    "socket.io-client": "~0.9.16",
    "chai": "~1.6.1",
    "mocha": "~1.10.0",
    "underscore": "~1.4.4",
    "express": "~3.2.6",
    "component": "~0.16.4",
    "testem": "~0.3.7"
  }
}
